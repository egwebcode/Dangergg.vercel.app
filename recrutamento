function showTyping() {
  const container = document.getElementById('messages');
  const div = document.createElement('div');
  div.id = 'typing';
  div.className = 'message bot';
  div.innerHTML = '<div class="typing"><span></span><span></span><span></span></div>';
  container.appendChild(div);
  container.scrollTop = container.scrollHeight;
}

function hideTyping() { document.getElementById('typing')?.remove(); }

function botMessage(text, type = 'text', delay = 1200) {
  showTyping();
  setTimeout(() => { hideTyping(); addMessage(text, true, type); }, delay);
}

function toggleReq(i) {
  checkedItems[i] = !checkedItems[i];
  const el = document.getElementById('check' + i);
  el.classList.toggle('checked', checkedItems[i]);
  const count = checkedItems.filter(Boolean).length;
  document.getElementById('progressFill').style.width = (count/8*100) + '%';
  document.getElementById('progressText').textContent = count + '/8 requisitos';
  const btn = document.getElementById('reqBtn');
  btn.disabled = count < 8;
  btn.textContent = count === 8 ? 'Confirmar ‚úì' : 'Marque todos os requisitos';
}

function confirmReq() {
  addMessage('Pronto! Marquei tudo ‚úÖ', false);
  setTimeout(() => {
    botMessage('Show demais! Voc√™ atende todos os requisitos! üéâ', 'text', 1000);
    setTimeout(() => {
      botMessage('Agora vou precisar de algumas informa√ß√µes suas, pode ser? √â rapidinho! üòä', 'text', 1500);
      setTimeout(() => {
        botMessage('Me conta, qual √© o seu nome?', 'text', 1200);
        setTimeout(() => { phase = 'nome'; enableInput('Digite seu nome...'); }, 1400);
      }, 1800);
    }, 1300);
  }, 500);
}

function enableInput(placeholder) {
  const input = document.getElementById('userInput');
  input.disabled = false;
  input.placeholder = placeholder;
  input.focus();
}

function sendMessage() {
  const input = document.getElementById('userInput');
  const value = input.value.trim();
  if (!value) return;
  
  if (phase === 'idade' && (isNaN(parseInt(value)) || parseInt(value) < 15)) {
    addMessage(value, false);
    setTimeout(() => botMessage('Eita, a idade m√≠nima √© 15 anos! Me passa sua idade certinha üòÖ', 'text', 800), 300);
    input.value = '';
    return;
  }
  
  addMessage(value, false);
  formData[phase] = value;
  input.value = '';
  input.disabled = true;
  
  const flows = {
    nome: () => { botMessage('Prazer, ' + value + '! Nome bonito! üòÑ', 'text', 800); setTimeout(() => { botMessage('Quantos anos voc√™ tem?', 'text', 1200); setTimeout(() => { phase = 'idade'; enableInput('Digite sua idade...'); }, 1400); }, 1000); },
    idade: () => { botMessage('Perfeito! Idade boa! üëç', 'text', 800); setTimeout(() => { botMessage('Me fala seu nick no Free Fire? üéÆ', 'text', 1300); setTimeout(() => { phase = 'nick'; enableInput('Digite seu nick...'); }, 1500); }, 1000); },
    nick: () => { botMessage(value + '? Nick daora! üî•', 'text', 800); setTimeout(() => { botMessage('E qual √© seu ID do Free Fire?', 'text', 1200); setTimeout(() => { phase = 'idGame'; enableInput('Digite seu ID...'); }, 1400); }, 1000); },
    idGame: () => { botMessage('Anotado! ‚úçÔ∏è', 'text', 700); setTimeout(() => { botMessage('Por √∫ltimo, seu WhatsApp? üì±', 'text', 1400); setTimeout(() => { phase = 'contato'; enableInput('Ex: (85) 99999-9999'); }, 1600); }, 900); },
    contato: () => { botMessage('Maravilha! Anotei tudo! üìù', 'text', 800); setTimeout(() => { botMessage('Voc√™ t√° quase dentro da fam√≠lia DANGER! üî•‚ù§Ô∏è‚Äçüî•', 'text', 1300); setTimeout(() => { botMessage('Escolha um l√≠der pra enviar seu formulario:', 'text', 1500); setTimeout(() => { addMessage('', true, 'admins'); phase = 'done'; }, 1700); }, 1500); }, 1000); }
  };
  
  setTimeout(() => flows[phase]?.(), 400);
}

